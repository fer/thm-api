{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "target": "es2020",
    "outDir": "build",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule":true,
    "sourceMap": true
  },
  "ts-node": {
      "files": true,
      "transpileOnly": true,
      "resolveJsonModule": true,
  },
  "include": ["src/index.ts", "src/lib/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}