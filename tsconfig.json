{
    "compilerOptions": {
      "lib": ["es2020"],
      "target": "es2020",
      "outDir": "build",
      "module": "CommonJS",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule":true,
      "sourceMap": true
    },
    "ts-node": {
        "files": true,
        "transpileOnly": true,
        "resolveJsonModule": true,
    },
    "include": ["*.ts", "declariations/**.d.ts", "libs/api.ts"],
    "exclude": ["node_modules", ".vscode"]
}